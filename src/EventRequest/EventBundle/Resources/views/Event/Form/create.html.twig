{% block form %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="row">
            {{ form_errors(form) }}
            <div class="col-md-4">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-1">
                &nbsp;
            </div>
            <div class="col-md-3">
                {{ form_row(form.date) }}
            </div>
            <div class="col-md-1">
                &nbsp;
            </div>
            <div class="col-md-3">
                {{ form_row(form.country) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                {{ form_row(form.address) }}
            </div>
            <div class="col-md-1">
                &nbsp;
            </div>
            <div class="col-md-3">
                {{ form_row(form.city) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 col-md-offset-11">
                {{ form_row(form.save) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock form %}